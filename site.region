<!doctype html>
<html>
  <head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">

    <!-- include system scripts, page meta, and header code injection -->
    {squarespace-headers}
  </head>
  <body id="{squarespace.page-id}" class="u-background-color-white {squarespace.page-classes}">
    <!-- age gate -->
    {@|apply age-gate.block}

    <!-- site navigation -->
    <squarespace:navigation navigationId="headerNav" template="header" />

    <!-- main content -->
    <main role="main">

      <squarespace:query collection="{.section collection}{urlId}{.end}">
        {@|apply hero.block}
        {@|apply about.block}
      </squarespace:query>

      {@|apply process.block}

      <section id="products">
        <div class="u-background-color-white container--max-width-lg">
          <div class="container--padding u-text-center">
            <img src="/assets/svgs/ca.svg" alt="CA Icon" />
            <h2 class="u-margin-bottom u-color-primary">Our Products</h2>
            <div class="container--3col">
              <squarespace:query collection="products">
                {.repeated section items}
                  {@|apply product.block}
                {.end}
              </squarespace:query>
            </div>
          </div>
        </div>
      </section>

      {@|apply newsletter.block}
      
      <section id="locate">
        <div class="u-background-color-white container--max-width-lg">
          <div class="container--padding">
            <h2 class="u-margin-bottom u-color-primary u-text-center">Locate Branded</h2>
            <div class="container--3col">
              <squarespace:query collection="locations">
                {.repeated section items}
                  {@|apply location.block}
                {.end}
              </squarespace:query>
            </div>
          </div>
        </div>
      </section>

      {@|apply contact.block}
    </main>

    <!-- site footer -->
    <footer class="u-background-color-primary">
      <div class="container--max-width-lg">
        <div class="u-padding-top--lg">
          <div class="u-padding u-text-center">
            <img src="/assets/svgs/logo.svg" alt="BRANDED Footer Logo" />
          </div>
          <div class="u-color-white container--3col container--align-items-center">
            <squarespace:navigation navigationId="footerNav" template="footer-nav" />
            <squarespace:navigation navigationId="footerContact" template="footer-contact" />
            <squarespace:navigation navigationId="footerSocial" template="footer-social" />
          </div>
        </div>
        {@|apply copyright.block}
      </div>
    </footer>

    <!-- combo and minify scripts when not logged in -->
    <squarespace:script src="site.js" />
    <squarespace:script src="forms.js" />
    <squarespace:script src="age-gate.js" />

    <!-- other scripts, and footer code injection -->
    {squarespace-footers}

  </body>
</html>
